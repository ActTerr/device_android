<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle"
            android:color="@color/white">
            <corners
                android:radius="60dip"
                />
            <stroke
                android:width="0dp"
                android:color="@color/white" />
            <solid
                android:color="@color/white" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle"
            android:color="@color/green">
            <corners
                android:radius="60dip"
                />
            <stroke
                android:width="0dp"
                android:color="@color/green" />
            <solid
                android:color="@color/green" />
        </shape>
    </item>

</selector>