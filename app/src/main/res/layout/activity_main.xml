<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mac.yk.devicemanagement.controller.activity.MainActivity">

    <TextView
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textSize="37sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="车务自管设备管理移动终端" />


    <Button
        android:id="@+id/diantai"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="50dp"
        android:text="电台"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/jikongqi"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="230dp"
        android:text="机控器"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/qukongqi"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="50dp"
        android:text="区控器"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/dianchi"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="230dp"
        android:text="电池"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/tongji"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="50dp"
        android:text="统计"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/yujing"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="230dp"
        android:text="预警"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
