<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:background="@color/gray2">

        <CheckBox
            android:id="@+id/cb_at"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
        <ImageView
            android:id="@+id/iv_document"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="2dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <EditText
            android:background="@null"
            android:layout_marginLeft="95dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:id="@+id/attachment_name"
            android:text="附件名称"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_below="@+id/attachment_name"
        android:layout_marginLeft="95dp"
        android:id="@+id/upload_time"
        android:layout_marginTop="5dp"
        android:text="上传时间"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/pb"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/upload_time"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:visibility="gone"
        android:src="@drawable/onsave"
        android:layout_toLeftOf="@+id/iv_cancel"
        android:layout_marginRight="10dp"
        android:id="@+id/iv_save"
        android:layout_width="25dp"
        android:layout_height="25dp" />
    <ImageView
        android:visibility="gone"
        android:layout_marginRight="15dp"
        android:id="@+id/iv_cancel"
        android:src="@drawable/cancel"
        android:layout_alignParentRight="true"
        android:layout_width="25dp"
        android:layout_height="25dp" />

    <ImageView
        android:visibility="gone"
        android:src="@drawable/edit"
        android:layout_toLeftOf="@+id/iv_delete"
        android:layout_marginRight="10dp"
        android:id="@+id/iv_edit"
        android:layout_width="25dp"
        android:layout_height="25dp" />
    <ImageView
        android:visibility="gone"
        android:layout_marginRight="15dp"
        android:id="@+id/iv_delete"
        android:src="@drawable/delete"
        android:layout_alignParentRight="true"
        android:layout_width="25dp"
        android:layout_height="25dp" />
    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_control"
        android:layout_toRightOf="@+id/pb"
        android:layout_below="@id/upload_time"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/cancel"/>
    <TextView
        android:visibility="gone"
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/upload_time"
        android:text="取消"
        android:textColor="@color/white"
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>